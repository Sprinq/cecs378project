# .env.sample
# Server configuration
PORT=5000
NODE_ENV=development

# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/secure-chat
# For production with MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/secure-chat

# JWT configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_REFRESH_SECRET=your_refresh_token_secret_key_change_this_in_production

# CORS
CLIENT_URL=http://localhost:3000

# Optionally add rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100  # 100 requests per window